#!/usr/bin/env php
<?php

if (file_exists(__DIR__.'/../../../autoload.php')) {
    require __DIR__.'/../../../autoload.php';
} else {
    require __DIR__.'/../vendor/autoload.php';
}

use Illuminate\Container\Container;
use Illuminate\Events\Dispatcher;
use Illuminate\Console\Application;

$container = new Container;
$events = new Dispatcher($container);

$artisan = new Application($container, $events, 'Version 1');
$artisan->setName('My Console App Name');

// Bind a command
$artisan->resolve(\Kurort\Cli\Commands\HelloWorld::class);
$artisan->resolve(\Kurort\Cli\Commands\ServiceStatus::class);
$artisan->resolve(\Kurort\Cli\Commands\SystemCreateUser::class);
$artisan->run();